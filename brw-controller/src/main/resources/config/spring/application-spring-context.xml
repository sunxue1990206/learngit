<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 系统日志初始化配置类 -->
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>classpath:config/log4j.properties</value>
			</list>
		</property>
	</bean>

	<!-- Cache初始化配置类 -->
	<bean id="loadCache" class="com.hyh.platform.cache.CacheInitialization">
		<constructor-arg value="classpath:localcache.xml"
			name="localConfig" />
		<constructor-arg value="classpath:memcached.xml" name="remoteConfig" />
	</bean>

	<bean id="springContextUtil" class="com.hyh.util.springcontext.SpringContextUtil"
		scope="singleton" />
	<bean class="com.hyh.brw.util.LoginUserUtilImpl"></bean>
</beans>